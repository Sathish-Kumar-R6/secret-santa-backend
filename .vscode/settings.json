{
  // Enable prettier as default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Enable TypeScript suggestions for React
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  "typescript.format.enable": true,

  // Format JSX files on save
  "editor.formatOnSaveMode": "modifications",

  // Enable error reporting on problems in TypeScript and JavaScript files
  "problems.decorations.enabled": true,

  // Customize tab size and spaces for code consistency
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Enable JSX and TypeScript snippet suggestions
  "editor.quickSuggestions": {
    "strings": true,
    "other": true
  },

  // Enable bracket pair colorization
  "editor.bracketPairColorization.enabled": true,

  // Enable auto-imports for React components
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true
}
